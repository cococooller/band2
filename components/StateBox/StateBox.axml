<view class="state-box">
  <view class="state-box__icon">
    <image class="state-box__icon-image" src="{{ icon }}" />
  </view>
  
  <view class="state-box__info">
    <text class="state-box__info__data">
      {{ data }}
    </text>
    <text class="state-box__info__name">
      {{ name }}
    </text>
    <text class="state-box__info__time">
      {{ time }} 上报
    </text>
  </view>
</view>